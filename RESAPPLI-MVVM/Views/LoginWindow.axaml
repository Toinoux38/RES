<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="RESAPPLI_MVVM.Views.LoginWindow"
        Title="LoginWindow">
    
        
        <StackPanel Margin="20">
                <TextBlock Text="Connexion à la RES" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
                
                <TextBox x:Name="MailAdmin" Watermark="Mail de l'Administrateur" Margin="0,0,0,10"/>	
                <TextBox x:Name="PassAdmin" Watermark="Mot de passe de l'Administrateur" PasswordChar="*" Margin="0,0,0,10"/>
		


                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="Se connecter" Click="LoginAction" Width="100"  Margin="0,10"/>
                </StackPanel>
        </StackPanel>
        
        
</Window>
